<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServer2012Dialect</property> <!-- 設定資料庫的方言 -->
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property> <!-- 驅動器名稱 -->
		<property name="hibernate.connection.url">jdbc:sqlserver://10.31.25.130:1433;DatabaseName=WebProject</property> <!-- 連結目標地點 -->
		<property name="hibernate.connection.username">scott</property> <!-- 登入帳號 -->
		<property name="hibernate.connection.password">tiger</property> <!-- 登入密碼 -->
		<property name="hibernate.default_schema">product</property> 
		<property name="hibernate.c3p0.max_size">20</property> <!-- 設定連線池中最大連線數 -->
		<property name="hibernate.c3p0.min_size">1</property>  <!-- 設定連線池中最小連線數 -->
		<property name="hibernate.c3p0.timeout">9000</property> <!-- 設定超時時間 -->
		<property name="hmb2ddl.auto">update</property> <!-- 設定自動新建或更新表格 -->
		<property name="hibernate.current_session_context_class">thread</property>
		<mapping class="entities.com.Product"/>
	</session-factory>
</hibernate-configuration>